datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Reservoir {
  capacity            Int?
  createdAt           DateTime             @default(now())
  id                  String               @id @default(cuid())
  location            String?
  name                String?
  updatedAt           DateTime             @updatedAt
  waterLevel          Int?
  waterQualityReports WaterQualityReport[]
}

model PumpStation {
  capacity  Int?
  createdAt DateTime               @default(now())
  id        String                 @id @default(cuid())
  location  String?
  name      String?
  status    EnumPumpStationStatus?
  updatedAt DateTime               @updatedAt
}

model WaterQualityReport {
  contaminants String?
  createdAt    DateTime   @default(now())
  id           String     @id @default(cuid())
  phLevel      Float?
  reportDate   DateTime?
  reservoir    Reservoir? @relation(fields: [reservoirId], references: [id])
  reservoirId  String?
  updatedAt    DateTime   @updatedAt
}

model Customer {
  address      String?
  createdAt    DateTime      @default(now())
  email        String?
  id           String        @id @default(cuid())
  name         String?
  phoneNumber  String?
  updatedAt    DateTime      @updatedAt
  usageRecords UsageRecord[]
}

model UsageRecord {
  amountUsed Float?
  createdAt  DateTime  @default(now())
  customer   Customer? @relation(fields: [customerId], references: [id])
  customerId String?
  date       DateTime?
  id         String    @id @default(cuid())
  updatedAt  DateTime  @updatedAt
}

enum EnumPumpStationStatus {
  Option1
}
